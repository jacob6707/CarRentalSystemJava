<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="540.0" prefWidth="960.0" spacing="16.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.jacob6707.carrentalsystemjavafx.controller.VehiclesTabController">
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
    </padding>
    <HBox spacing="8.0">
        <Label text="Vehicles">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <TextField fx:id="vehiclesSearchTextField" onAction="#onVehicleSearchAction" promptText="Search..." />
            <Button fx:id="vehicleDeleteButton" disable="true" mnemonicParsing="false" onAction="#onVehicleDeleteAction" text="Delete" />
            <Button fx:id="vehicleAddButton" mnemonicParsing="false" onAction="#onVehicleAddAction" text="Add" />
        </HBox>
    </HBox>
    <TableView fx:id="vehiclesTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="vehicleIdColumn" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="vehicleBrandColumn" prefWidth="75.0" text="Brand" />
            <TableColumn fx:id="vehicleModelColumn" prefWidth="75.0" text="Model" />
            <TableColumn fx:id="vehicleYearColumn" prefWidth="75.0" text="Year" />
            <TableColumn fx:id="vehicleMileageColumn" prefWidth="75.0" text="Mileage" />
            <TableColumn fx:id="vehicleLicensePlateColumn" prefWidth="75.0" text="License Plate" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
