<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="540.0" prefWidth="960.0" spacing="16.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.jacob6707.carrentalsystemjavafx.controller.RentalsTabController">
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
    </padding>
    <HBox spacing="8.0">
        <Label text="Rentals">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <TextField fx:id="rentalsSearchTextField" onAction="#onRentalSearchAction" promptText="Search..." />
            <Button fx:id="rentalDeleteButton" disable="true" mnemonicParsing="false" text="Delete" />
            <Button fx:id="rentalAddButton" disable="true" mnemonicParsing="false" text="Add" />
        </HBox>
    </HBox>
    <TableView fx:id="rentalsTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="rentalIdColumn" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="rentalCustomerColumn" prefWidth="75.0" text="Customer" />
            <TableColumn fx:id="rentalVehicleColumn" prefWidth="75.0" text="Vehicle" />
            <TableColumn fx:id="rentalStartDateColumn" prefWidth="75.0" text="Start Date" />
            <TableColumn fx:id="rentalEndDateColumn" prefWidth="75.0" text="End Date" />
            <TableColumn fx:id="rentalPriceColumn" prefWidth="75.0" text="Price" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
