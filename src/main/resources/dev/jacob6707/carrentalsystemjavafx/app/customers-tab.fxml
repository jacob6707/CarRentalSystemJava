<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="540.0" prefWidth="960.0" spacing="16.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.jacob6707.carrentalsystemjavafx.controller.CustomersTabController">
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
    </padding>
    <HBox spacing="8.0">
        <Label text="Customers">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <TextField fx:id="customersSearchTextField" onAction="#onCustomerSearchAction" promptText="Search..." />
            <Button fx:id="customerDeleteButton" disable="true" mnemonicParsing="false" onAction="#onCustomerDeleteAction" text="Delete" />
            <Button fx:id="customerAddButton" mnemonicParsing="false" onAction="#onCustomerAddAction" text="Add" />
        </HBox>
    </HBox>
    <TableView fx:id="customersTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="customerIdColumn" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="customerFirstNameColumn" prefWidth="75.0" text="First Name" />
            <TableColumn fx:id="customerLastNameColumn" prefWidth="75.0" text="Last Name" />
            <TableColumn fx:id="customerEmailColumn" prefWidth="75.0" text="Email" />
            <TableColumn fx:id="customerPhoneNumberColumn" prefWidth="75.0" text="Phone Number" />
            <TableColumn fx:id="customerIDNumberColumn" prefWidth="75.0" text="ID Number" />
         <TableColumn fx:id="customerLocationColumn" prefWidth="75.0" text="Location" />
         <TableColumn fx:id="customerDateOfBirthColumn" prefWidth="75.0" text="Date of Birth" />
         <TableColumn fx:id="customerDiscountRateColumn" prefWidth="75.0" text="Discount Rate" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
